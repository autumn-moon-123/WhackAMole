<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="centerInside"
        android:src="@drawable/img_wakamole_text" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/purple_custom"
        android:textSize="32sp"
        android:text="Leaderboard"
        android:textStyle="bold"/>

    <!-- 手动列出5个位置 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <include layout="@layout/item_leaderboard" android:id="@+id/row_1" />
        <include layout="@layout/item_leaderboard" android:id="@+id/row_2" />
        <include layout="@layout/item_leaderboard" android:id="@+id/row_3" />
        <include layout="@layout/item_leaderboard" android:id="@+id/row_4" />
        <include layout="@layout/item_leaderboard" android:id="@+id/row_5" />
    </LinearLayout>
</LinearLayout>