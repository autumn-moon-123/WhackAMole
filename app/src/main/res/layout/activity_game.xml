<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- 顶部：分数和时间 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- 这里的 logo 如果没有可以删掉或者换别的 -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:scaleType="centerInside"
            android:src="@drawable/img_wakamole_text"
            android:paddingTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/tv_timer_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Timer: 30"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_score_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Score: 0"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <!-- 9个洞的布局 (3行) -->
    <!-- 第1行 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageView android:id="@+id/iv_mole_01" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:padding="5dp" android:scaleType="centerInside" android:src="@drawable/img_without_mole"/>
        <ImageView android:id="@+id/iv_mole_02" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:padding="5dp" android:scaleType="centerInside" android:src="@drawable/img_without_mole"/>
        <ImageView android:id="@+id/iv_mole_03" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:padding="5dp" android:scaleType="centerInside" android:src="@drawable/img_without_mole"/>
    </LinearLayout>

    <!-- 第2行 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageView android:id="@+id/iv_mole_04" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:padding="5dp" android:scaleType="centerInside" android:src="@drawable/img_without_mole"/>
        <ImageView android:id="@+id/iv_mole_05" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:padding="5dp" android:scaleType="centerInside" android:src="@drawable/img_without_mole"/>
        <ImageView android:id="@+id/iv_mole_06" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:padding="5dp" android:scaleType="centerInside" android:src="@drawable/img_without_mole"/>
    </LinearLayout>

    <!-- 第3行 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageView android:id="@+id/iv_mole_07" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:padding="5dp" android:scaleType="centerInside" android:src="@drawable/img_without_mole"/>
        <ImageView android:id="@+id/iv_mole_08" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:padding="5dp" android:scaleType="centerInside" android:src="@drawable/img_without_mole"/>
        <ImageView android:id="@+id/iv_mole_09" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:padding="5dp" android:scaleType="centerInside" android:src="@drawable/img_without_mole"/>
    </LinearLayout>

</LinearLayout>